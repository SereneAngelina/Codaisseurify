<div class = "row">
  <div class="panel panel-warning col-md-6 col-md-offset-3">
      <div class="panel-heading text-center">
        <h3>Play list</h3>
      </div>

     <div class="text-center">
       <%= image_tag @artist.image_url.thumbnail %>
     </div>

     <div class="panel-body text-center">
        <% @artist.songs.each do |song| %>
             <ul class="list-group">
                 <li class="list-group-item clearfix" id='<%= song.id %>'>
                      <div class="song-title">  <%= song.name %> </div>
                        <%= link_to song.url %>
                         <a href="#" class="delete-song" artist-id="<%= song.artist_id %>" song-id="<%= song.id %>"><i class="glyphicon glyphicon-trash color_red song-delete"></i></a>
                </li>
             </ul>
       <% end %>
     </div>

    <div>
      <%= render 'form' %>
    </div>
  </div>
</div>
