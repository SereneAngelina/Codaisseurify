
<%= form_for [@artist, @artist.songs.new] do |f| %>


      <div class="row text-center">


        <div class="form-group">
            <%= render 'shared/validation_errors' %>
            <label>Song name :</label>
            <%= f.text_field :name, placeholder: "Add song name" %>
            <label>Song URL :</label>
            <%= f.text_field :url, placeholder: "Add song url" %>
        </div>

        <div class="actions">
         <%= f.submit "Add new song", class: "btn btn-success" %>
        </div>

        <% end %>

      </div>
